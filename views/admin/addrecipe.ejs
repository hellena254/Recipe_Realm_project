<div class="admin-title">
  <h2>Add New Recipe</h2>
</div>

<form action="/addRecipe" method="POST">

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Recipe Title" name="title" required>

  <label for="description"><b>Description</b></label>
  <textarea name="description" cols="50" rows="3" placeholder="Recipe Description"></textarea>

  <label for="ingredients"><b>Ingredients</b></label>
  <textarea name="ingredients" cols="50" rows="5" placeholder="Enter ingredients separated by commas"></textarea>

  <label for="steps"><b>Steps</b></label>
  <textarea name="steps" cols="50" rows="5" placeholder="Enter steps separated by commas"></textarea>

  <input type="submit" value="Add" class="btn">

</form>

