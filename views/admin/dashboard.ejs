<div class="admin-title">
  <h2>My Recipes</h2>
  <a href="/addRecipe" class="button">+ Add New</a>
</div>

<ul class="admin-posts">

  <% data.forEach(recipe => { %>
   
    <li>
      <a href="/recipe/<%= recipe._id %>">
        <%= recipe.title %> &nearr;
      </a>
      <div class="admin-post-controls">
        <a href="/editRecipe/<%= recipe._id %>" class="btn">Edit</a>

        <form action="/deleteRecipe/<%= recipe._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete" class="btn-delete btn">
        </form>

      </div>

    </li>

  <% }) %>
</ul>
